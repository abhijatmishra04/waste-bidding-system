<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentActivity">
    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/my_toolbar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="?attr/actionBarSize"-->
    <!--android:elevation="4dp"-->
    <!--android:background="@color/colorPrimary"-->
    <!--/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlty2"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/bla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add Balance"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/scr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:layout_below="@id/bla"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:padding="@dimen/_2sdp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp">


                    <android.support.v7.widget.CardView
                        android:id="@+id/fifty"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/curved_shape"
                        android:onClick="onClick"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@android:drawable/radiobutton_off_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:text="50"
                                android:textSize="@dimen/_25sdp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_2sdp"

                                android:src="@drawable/indian_rupee"
                                android:tint="@android:color/tertiary_text_dark" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/hun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fifty"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/white"
                        android:onClick="onClick"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@android:drawable/radiobutton_off_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:text="100"
                                android:textSize="@dimen/_25sdp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_2sdp"

                                android:src="@drawable/indian_rupee"
                                android:tint="@android:color/tertiary_text_dark" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/twohun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hun"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/white"
                        android:onClick="onClick"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@android:drawable/radiobutton_off_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:text="200"
                                android:textSize="@dimen/_25sdp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_2sdp"

                                android:src="@drawable/indian_rupee"
                                android:tint="@android:color/tertiary_text_dark" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/threehun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/twohun"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/white"
                        android:onClick="onClick"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@android:drawable/radiobutton_off_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:text="300"
                                android:textSize="@dimen/_25sdp" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_2sdp"

                                android:src="@drawable/indian_rupee"
                                android:tint="@android:color/tertiary_text_dark" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </ScrollView>

            <RelativeLayout
                android:id="@+id/rlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scr"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:background="@drawable/curved_shape">

                <EditText
                    android:id="@+id/balanceed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:hint="Balance"
                    android:textColor="@android:color/holo_green_light"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="@dimen/_25sdp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/indian_rupee"
                    android:tint="@android:color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ltly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlt"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_textinput"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_20sdp">


                    <EditText
                        android:id="@+id/card_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/card_icon"
                        android:hint="Card Number"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLength="19"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/ltuyo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_textinput"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/name_textinput1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_weight="1">

                        <EditText

                            android:id="@+id/exp_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Expire date"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:maxLength="5"
                            android:textSize="14sp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/name_textinput2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/cvv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Cvv"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:textSize="14sp" />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_textinput3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/ltuyo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/pin"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/img_authentication"
                        android:drawableTint="@color/cardview_dark_background"
                        android:hint="PIN"
                        android:importantForAutofill="no"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layotut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ltly"

                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/save_secure" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="100% Safe and Secure Payments."
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />


            </LinearLayout>


            <Button
                android:id="@+id/btnBuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layotut"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/ripple_btton"
                android:onClick="onClick"
                android:text="pay"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
