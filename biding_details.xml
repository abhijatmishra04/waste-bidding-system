<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    android:orientation="horizontal"
    android:padding="@dimen/_1sdp">

    <ScrollView
        android:layout_width="match_parent"
        android:paddingTop="@dimen/_4sdp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/imgtxt"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/curved_shape"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:text="  Images  :   "
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/_13sdp" />


            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/imgtxt"
                android:visibility="visible"
                android:id="@+id/recycler_img"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />



            <LinearLayout
                android:layout_below="@+id/recycler_img"
                android:id="@+id/ly1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/curved_shape"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="  Category  :   "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/categorydt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:hint="helooo my bid"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ly2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly1"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/curved_shape"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="  Title  :   "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/titledt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:hint="helooo my bid"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly2"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/curved_shape"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="  Description  :   "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/discriptiondt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="helooo my bida lkfl kalkflkalkf kka; kfakfa kl;fklkalkflklkalfklkalklfkal"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/_11sdp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly3"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/curved_shape"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="  Minimum Biding Amount  :   "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/_13sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/imgdh"
                        android:gravity="center"
                        android:text="50"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_25sdp" />

                    <ImageView
                        android:id="@+id/imgdh"
                        android:layout_width="40dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/indian_rupee"
                        android:tint="@color/green" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/bidhistory"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:gravity="center"
                    android:text="show Biding history"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/ly4"
                android:visibility="gone"
                android:id="@+id/recycler_bing"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


            <LinearLayout
                android:id="@+id/ly5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_bing"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/curved_shape"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:text="Start Date\n and time  :"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:hint="helooo my bid"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly5"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/curved_shape"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:text="End Date\n and time  :"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:hint="helooo my bid"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly7"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly6"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/curved_shape"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:padding="@dimen/_2sdp"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="  Enter biding Amount :  "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:padding="@dimen/_12sdp"
                        android:id="@+id/minmum_bid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView_userIcon"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/curved_shape"
                        android:hint="Enter Amount here"
                        android:inputType="number"
                        android:paddingStart="20dp"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/indian_rupee" />

                    <TextView
                        android:layout_below="@+id/minmum_bid"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="Please enter a higher amount from min bid."
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="PrivateResource" />

                </RelativeLayout>


            </LinearLayout>


            <Button
                android:layout_below="@+id/ly7"
                android:id="@+id/done"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_btton"
                android:fontFamily="sans-serif-medium"
                android:text="done"
                android:textColor="@color/white" />
        </RelativeLayout>

    </ScrollView>

</android.support.v7.widget.CardView>
