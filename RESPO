public static final String UPDATE_SCHEDULE_M2M =
    "UPDATE schedule_m2m " +
    "SET CLS_DT = ?, " +        // Current date
    "    UPDT_BY = 'CUSTAGG', " + // Hardcoded updated by value
    "    UPDT_TS = ?, " +       // Current timestamp
    "    SCHD_STAT = 'S02' " +  // Hardcoded schedule status
    "WHERE SCHD_ID = ?";



package com.bofa.sst.batch.core.impl;

import com.bofa.sst.batch.constants.CustaggSQLFactory;
import com.bofa.sst.batch.model.CustaggProcessedRecordsDTO;
import lombok.extern.log4j.Log4j2;
import org.springframework.batch.item.ItemWriter;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Component;

import java.sql.Timestamp;
import java.time.Instant;
import java.util.List;

@Component
@Log4j2
public class CustaggWriter implements ItemWriter<CustaggProcessedRecordsDTO> {

    @Autowired
    private JdbcTemplate jdbcTemplate;

    @Override
    public void write(List<? extends CustaggProcessedRecordsDTO> items) throws Exception {
        log.info("CustaggWriter: Writing {} records to the database.", items.size());

        for (CustaggProcessedRecordsDTO record : items) {
            try {
                updateScheduleM2M(record.getScheduleId());
                log.info("CustaggWriter: Successfully updated ScheduleM2M for Schedule ID: {}", record.getScheduleId());
            } catch (Exception e) {
                log.error("CustaggWriter: Failed to update ScheduleM2M for Schedule ID: {}", record.getScheduleId(), e);
            }
        }
    }

    private void updateScheduleM2M(String scheduleId) {
        String updateQuery = CustaggSQLFactory.UPDATE_SCHEDULE_M2M;
        Timestamp currentTimestamp = Timestamp.from(Instant.now());

        jdbcTemplate.update(updateQuery, new Object[]{currentTimestamp, currentTimestamp, scheduleId});

        log.info("CustaggWriter: Executed update query for Schedule ID: {}", scheduleId);
    }
}
