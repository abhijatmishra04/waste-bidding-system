ZonedDateTime now = ZonedDateTime.now(ZoneId.systemDefault());
Timestamp calculatedSchdCreatTs = Timestamp.valueOf(now.toLocalDateTime());
String schdCreatTsString = calculatedSchdCreatTs.toString(); // Convert to String

// Ensure the length does not exceed 26 characters
if (schdCreatTsString.length() > 26) {
    schdCreatTsString = schdCreatTsString.substring(0, 26); // Truncate to 26 characters
}

// Set the value back to the staging table
stagingTable.setSchdCreatTs(Timestamp.valueOf(schdCreatTsString));
