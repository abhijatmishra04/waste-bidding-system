@PostConstruct
public void initFileProperties() {
    try {
        inputFilePath = dynamicConfigPropertiesRepository
                .findPropertyValueByPropertyName(CustaggBatchConstants.FILE_PATH_REFERDATA);

        // Validate properties
        validateProperties();

        // Ensure the file is from today
        File inputFile = new File(inputFilePath);
        if (!inputFile.exists()) {
            throw new IllegalStateException("File does not exist at path: " + inputFilePath);
        }

        // Check if the file's last modified date matches today's date
        Instant lastModifiedInstant = Instant.ofEpochMilli(inputFile.lastModified());
        LocalDate fileDate = lastModifiedInstant.atZone(ZoneId.systemDefault()).toLocalDate();
        LocalDate today = LocalDate.now();

        if (!fileDate.equals(today)) {
            throw new IllegalStateException("File is not from today. Last modified date: " + fileDate);
        }

        Log.info("File validation successful. File is from today.");
    } catch (Exception e) {
        Log.error("Error initializing CustaggCompFileReader properties: {}", e.getMessage(), e);
        throw new ApplicationContextException("Failed to initialize CustaggCompFileReader properties", e);
    }
}
